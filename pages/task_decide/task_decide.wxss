/* view */
.defenseView {
  width: 100%;
  height: 200px;
  top: -200px;
  background: red; 
  opacity: 0;
  display: none;   
}

.destroyView {
  width: 100%;
  height: 200px;
  top: -200px;
  background: yellow; 
  opacity: 0;
  display: none;   
}

.fireView {
  width: 100%;
  height: 200px;
  top: -200px;
  background: green; 
  opacity: 0;
  display: none;   
}

/* view state */
.bottomViewShow {
  display: block;
  opacity: 1;
}

.bottomViewHide {
  display: none;
  opacity: 0;
}